	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	padding-top: 20px;
	padding-bottom: 20px;
	position: relative;
}
.article-list-box:after {
	position: absolute;
	width: 100%;
	bottom: 0;
	left: 0;
	height: 1px;
	background-color: #dfdfdf;
	-webkit-transform: scaleY(0.5);
	    -ms-transform: scaleY(0.5);
	        transform: scaleY(0.5);
